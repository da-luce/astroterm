# Root .editorconfig file
root = true

# Apply settings to all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Custom settings for C, C++ files
[*.{c,cpp,h,hpp}]
based_on_style = Microsoft
max_line_length = 128
sort_includes = true

[*.{yml,yaml}]
indent_size = 2
